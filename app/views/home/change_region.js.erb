
$('#comuna').children().remove();


$('#comuna').append($('<option>',
    {
        value: "",
        disabled: "",
        selected: "",
        text : ""
    }));

<% @comunas.each do |c| %>
  $('#comuna').append($('<option>',
    {
        value: "<%= c.id %>",
        text : "<%= c.nombre %>",
    }));
<% end %>

$('#comuna').formSelect();