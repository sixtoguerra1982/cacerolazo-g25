<p>
  <strong>Creado Por:</strong>
  <%= @evento.user.email %>
</p>
<p>
  <strong>Comuna:</strong>
  <%= @evento.comuna.nombre.capitalize %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @evento.descripcion %>
</p>

<p>
  <strong>Organizacion:</strong>
  <%= @evento.organizacion %>
</p>

<p>
  <strong>Encargado:</strong>
  <%= @evento.encargado %>
</p>

<p>
  <strong>Direccion:</strong>
  <%= @evento.direccion %>
</p>

<p>
  <strong>Dias horarios:</strong>
  <%= @evento.dias_horarios %>
</p>

<p>
  <strong>Organizador:</strong>
  <%= @evento.organizador %>
</p>

<p>
  <strong>Photo:</strong>
  <%= @evento.photo %>
</p>

<% if user_signed_in? && @evento.user_id == current_user.id %>
  <%= link_to 'Edit', edit_evento_path(@evento) %> |
  <%= link_to 'Destroy', evento_path(@evento), method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', :back %>
<% end %>
